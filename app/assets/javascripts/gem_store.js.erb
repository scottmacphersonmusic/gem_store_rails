(function() {
  var app = angular.module('gemStore', ['store-directives', 'templates']);

  app.controller('StoreController', [ '$http', function($http){
    var store = this;
    store.products = [];
    $http.get("<%= asset_path 'store-products.json' %>").success(function(data){
      store.products = data;
    });
  } ]);

  app.controller("ReviewController", function(){

    this.review = {};

    this.addReview = function(product){
      this.review.createdOn = Date.now();
      product.reviews.push(this.review);
      this.review = {};
    };
  });
})();
